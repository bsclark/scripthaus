## User specific aliases and functions
# common commands
alias fab="fab -f ~/fabric/fabfile.py"
alias fabp="fab -f ~/fabric/fabfile.py -P"
alias cdd="cd ~/Downloads"
alias vi=vim
alias ls="ls -G"

alias cda="cd ~/GitWork/ansible-playbooks;git status"
alias cdg="cd ~/GitWork/"
alias cdt="cd ~/GitWork/techops-scripts;git status"

alias cdmy="cd ~/GitPersonal/"
alias cdmys="cd ~/GitPersonal/scripthaus;git pull"
